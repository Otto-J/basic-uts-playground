	.navigator-wrap:link,
	.navigator-wrap:visited,
	.navigator-wrap:hover,
	.navigator-wrap:active {
		text-decoration: none;
		color: inherit;
		cursor: pointer;
	}

	.navigator {
		margin-bottom: 15px;
	}
